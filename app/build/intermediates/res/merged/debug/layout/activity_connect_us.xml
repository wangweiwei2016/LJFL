<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    
    tools:context=".HomeActivityFragment" >
<include
        android:id="@+id/rl_title"
        layout="@layout/activity_top" />
 <ScrollView
     	android:layout_marginTop="@dimen/height_50_80"
         android:id="@+id/scrollView_showMessages"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_title"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="@dimen/height_10_80"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/connectus_img"
        android:layout_width="@dimen/width_150_80"
        android:layout_height="@dimen/height_50_80"
        android:layout_marginTop="@dimen/height_20_80"
        android:src="@drawable/qiaoying" />


    
    <TextView
  		android:id="@+id/connectus_tv"
        android:layout_marginLeft="@dimen/width_22_80"
        android:layout_marginRight="@dimen/width_22_80"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:layout_marginTop="@dimen/height_20_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectus_text1" />
    	
    
    <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal"
    		android:textColor="@color/textColor"
    		android:layout_marginTop="@dimen/width_10_80"
			android:gravity="center">

        
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_30_80"
        android:layout_marginTop="@dimen/height_3_80"
        android:textColor="@color/textColor"
        android:text="@string/connectus_text2"
        android:textSize="@dimen/four_word" />
            
        <ImageButton
            android:id="@+id/img_phone"
            android:onClick="clickHandler"
            android:layout_width="@dimen/width_24_80"
            android:layout_height="@dimen/height_20_80"
			android:layout_marginLeft="@dimen/width_10_80"
            android:background="@drawable/connectus_phone" />
    


    </LinearLayout>
    <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal"
   
			android:gravity="center">

      <TextView
        android:textSize="@dimen/four_word"
        android:textColor="@color/textColor"
        android:layout_marginBottom="@dimen/height_5_80"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_30_80"
        android:autoLink="all"
        android:text="@string/connectus_text3" />
        
     
    

	
    </LinearLayout>
    
    
       
      
</LinearLayout>
</ScrollView>
</RelativeLayout>

