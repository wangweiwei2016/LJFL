<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_navigate"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_12_80"
    android:background="@color/head_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

      <ImageView
            android:id="@+id/left_ImageView"
            android:layout_width="@dimen/width_30_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/width_10_80"
            android:scaleType="centerInside"
            android:clickable="true"
            android:gravity="left|bottom"
            android:src="@drawable/icon_return" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mainName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_12_80"
            android:gravity="center"
            android:text="@string/app_login_title"
            android:textColor="#ffffffff"
            android:textSize="@dimen/title_word_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="right|bottom"
            android:onClick="ButtonClicked"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="@dimen/title_word_size" />

        <ImageView
            android:id="@+id/right_ImageView"
            android:layout_width="@dimen/width_10_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/width_10_80"
            android:clickable="true"
            android:gravity="right|bottom"
            android:onClick="ButtonClicked"
            android:src="@drawable/icon_return"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>