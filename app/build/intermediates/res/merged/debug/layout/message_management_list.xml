<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/width_3_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/message_time" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_toRightOf="@id/imageView1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="@string/str_timelabel" />

    <TextView
        android:id="@+id/listitem_textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:layout_toRightOf="@id/textView1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="@string/str_default" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="@dimen/width_3_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/message_type" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView2"
        android:layout_toRightOf="@id/imageView2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="@string/str_typelabel" />

    <TextView
        android:id="@+id/listitem_textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="test2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView2"
        android:layout_marginLeft="@dimen/width_3_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/message_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView3"
        android:layout_toRightOf="@id/imageView3"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="@string/str_contentlabel" />

    <TextView
        android:id="@+id/listitem_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView3"
        android:layout_marginBottom="@dimen/height_10_80"
        android:layout_marginRight="@dimen/width_3_80"
        android:layout_toRightOf="@id/textView3"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="test3" />

    <Button
        android:id="@+id/listitem_button_delete"
        android:layout_width="@dimen/width_70_80"
        android:layout_height="@dimen/height_35_80"
        android:layout_alignBaseline="@+id/listitem_textView_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/width_3_80"
        android:background="@drawable/button1seletor"
        android:gravity="center"
        android:text="@string/str_deletelabel"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word" />

</RelativeLayout>