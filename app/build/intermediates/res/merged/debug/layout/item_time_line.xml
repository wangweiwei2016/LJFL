<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/iv_mark"
            android:layout_width="@dimen/width_18_80"
            android:layout_height="@dimen/height_16_80"
            android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/width_2_80"
            android:layout_marginRight="@dimen/width_2_80"
              android:layout_marginTop="@dimen/height_6_80"
            android:background="@drawable/hua" />

        <TextView
           
            android:id="@+id/txt_date_time"
            android:layout_width="@dimen/width_70_80"
          android:layout_height="@dimen/height_16_80"
            android:layout_alignParentTop="true"
    android:layout_marginTop="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_15_80"
            
            android:textSize="@dimen/three_word"
            android:text="环保新手"
           android:drawableRight="@drawable/jiantou7"
            android:gravity="right|center_vertical"
            
            android:textColor="@color/textColor" />
          <TextView
  
            android:id="@+id/date2"
            android:layout_width="@dimen/width_70_80"
            android:layout_height="@dimen/height_16_80"
            android:layout_below="@+id/txt_date_time"
            android:layout_marginLeft="@dimen/width_15_80"
            android:textSize="@dimen/three_word"
            android:text="dkdk"
          
          
           android:gravity="right|bottom"
            android:textColor="@color/textColor" />

      

    </RelativeLayout>

    <TextView
        
        android:id="@+id/txt_date_content"
        android:layout_width="@dimen/width_40_80"
        android:layout_height="@dimen/height_39_80"
      android:visibility="visible"
      android:paddingTop="@dimen/height_8_80"

      android:layout_alignParentTop="true"
        android:textSize="@dimen/three_word"
      android:drawableTop="@drawable/iconfont_xiaoqiz2i"
        android:layout_marginLeft="@dimen/width_100_80"
   
        android:textColor="@color/textColor" />
    <View
        android:id="@+id/v_line"
        android:layout_width="@dimen/width_10_80"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_90_80"
        android:background="@color/suganbg" />

    

</RelativeLayout>