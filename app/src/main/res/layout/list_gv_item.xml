<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
   android:orientation="vertical"
    
   
     >

    <ImageView
        android:layout_weight="1"
        android:layout_marginTop="@dimen/height_10_80"
        android:id="@+id/iv_gv_item"
         android:layout_marginLeft="@dimen/width_5_80"
        android:layout_marginRight="@dimen/width_5_80"
        android:layout_width="@dimen/width_60_80"
        android:layout_height="@dimen/height_60_80" />

    <TextView
       
       
        android:id="@+id/tv_gv_item"
        android:layout_width="@dimen/width_100_80"
        android:layout_height="@dimen/height_30_80"
        android:layout_marginLeft="@dimen/width_5_80"
        android:layout_marginRight="@dimen/width_5_80"
        android:layout_weight="100"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="@dimen/Two_word" />

</LinearLayout>