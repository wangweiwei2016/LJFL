<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.aimowei.common.NoScrollViewPager
        android:id="@+id/tabpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="@color/bg" >
    </com.aimowei.common.NoScrollViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_14_80" >

        <ImageView
            android:id="@+id/img_tab_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:scaleType="matrix" />

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home"
                android:layout_width="@dimen/width_25_80"
                android:layout_height="@dimen/width_25_80"
                android:layout_marginTop="@dimen/width_10_80"
                android:scaleType="fitXY"
                android:src="@drawable/icon_square_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_10_80"
                android:text="广场"
                android:textColor="@color/black"
                android:textSize="@dimen/little_word_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/square_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/square"
                android:layout_width="@dimen/width_25_80"
                android:layout_height="@dimen/width_25_80"
                android:layout_marginTop="@dimen/width_10_80"
                android:scaleType="fitXY"
                android:src="@drawable/icon_community_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_10_80"
                android:text="社团"
                android:textColor="@color/black"
                android:textSize="@dimen/little_word_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mySpace_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mySpace"
                android:layout_width="@dimen/width_25_80"
                android:layout_height="@dimen/width_25_80"
                android:layout_marginTop="@dimen/width_10_80"
                android:scaleType="fitXY"
                android:src="@drawable/icon_my_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_10_80"
                android:text="我"
                android:textColor="@color/black"
                android:textSize="@dimen/little_word_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>