<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="true"
        android:scaleType="matrix" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.28"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_10_80"
            android:layout_marginLeft="@dimen/width_10_80"
               android:layout_marginTop="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:background="@drawable/shape_rec_grey_border"
            android:gravity="center|left"
            android:paddingLeft="@dimen/width_15_80"
            android:text="请输入新的密码"
            android:textColor="@color/black"
            android:textSize="@dimen/main_word_size" />

        <EditText
                android:id="@+id/conform_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_10_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:layout_marginTop="@dimen/width_10_80"
            android:background="@drawable/shape_rec_grey_border"
            android:gravity="center|left"
            android:paddingLeft="@dimen/width_15_80"
            android:text="请重新输入新密码"
            android:textColor="@color/black"
            android:textSize="@dimen/main_word_size" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_12_80"
            android:layout_marginTop="20dp"
            android:background="@color/head_bg"
            android:gravity="center"
            android:onClick="ButtonClicked"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/title_word_size" />
    </LinearLayout>

</LinearLayout>