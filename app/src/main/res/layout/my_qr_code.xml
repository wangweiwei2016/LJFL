<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_12_80"
        layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_5_80"
        android:layout_marginRight="@dimen/width_5_80"
        android:layout_marginTop="@dimen/width_2_80"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_5_80"
            android:layout_marginTop="@dimen/width_2_80"
            android:orientation="horizontal" >

            <com.aimowei.common.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_marginLeft="@dimen/width_10_80"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/width_50_80"
                android:layout_height="@dimen/width_50_80"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/empty_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/width_5_80"
                android:layout_marginRight="@dimen/width_5_80"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="刘洋"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_word_size" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50_80"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/width_10_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY"
            android:focusableInTouchMode="false"
            android:src="@drawable/empty_photo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/width_3_80"
            android:text="扫一扫上面的二维码图片，加我为好友"
            android:textColor="@color/black"
            android:textSize="@dimen/little_word_size" />
    </LinearLayout>

</LinearLayout>