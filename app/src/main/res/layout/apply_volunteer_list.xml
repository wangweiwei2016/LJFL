<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingBottom="@dimen/height_10_80" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/width_20_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/message_time" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_toRightOf="@id/imageView1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="开始时间：" />

    <TextView
        android:id="@+id/listitem_textView_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:layout_toRightOf="@id/textView1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="@string/str_default" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="@dimen/width_20_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/message_time" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView2"
        android:layout_toRightOf="@id/imageView2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="结束时间：" />

    <TextView
        android:id="@+id/listitem_textView_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="test2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/width_20_80"
        android:layout_height="@dimen/height_20_80"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView2"
        android:layout_marginLeft="@dimen/width_20_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:src="@drawable/garbageputquery_address" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView3"
        android:layout_toRightOf="@id/imageView3"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="地点：" />

    <TextView
        android:id="@+id/listitem_textView_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView3"
        android:layout_marginBottom="@dimen/height_10_80"
        android:layout_marginRight="@dimen/width_3_80"
        android:layout_toRightOf="@id/textView3"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word"
        android:text="test3" />

    <Button
        android:id="@+id/listitem_button_apply"
        android:layout_width="@dimen/width_200_80"
        android:layout_height="@dimen/height_35_80"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_10_80"
        android:background="@drawable/button1seletor"
        android:gravity="center"
        android:text="申请志愿者"
        android:textColor="@color/textColor"
        android:textSize="@dimen/four_word" />

</RelativeLayout>